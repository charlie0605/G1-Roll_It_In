<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.charlie.g1_roll_it_in">
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ball"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".gameUI.NameUI">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".gameUI.LeaderboardUI"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.CustomTheme"></activity>
        <activity
            android:name=".gameUI.MenuUI"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".gameUI.GameUI"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".gameUI.InstructionUI"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.CustomTheme" />
    </application>

</manifest>